{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Input.Text",
      "label": "Title",
      "id": "Title",
      "value": "${title}",
      "isRequired": true,
      "errorMessage": "Title is required"
    },
    {
      "type": "Input.ChoiceSet",
      "label": "Category",
      "id": "RetailCategory",
      "value": "${category}",
      "isRequired": true,
      "errorMessage": "Category is required",
      "choices": [
        {
          "$data": "${categories}",
          "title": "${$data}",
          "value": "${$data}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}