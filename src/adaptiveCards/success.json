{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "refresh": {
        "userIds": [],
        "action": {
            "type": "Action.Execute",
            "verb": "refresh",
            "title": "Refresh",
            "data": {
                "productId": "${Product.Id}"
            },
            "userIds": [
                "${UserId}"
            ]
        }
    },
    "body": [
        {
            "type": "Container",
            "style": "good",
            "separator": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${message}",
                    "weight": "Bolder",
                    "size": "Medium",
                    "color": "Good"
                }
            ]
        },
        {
            "type": "Container",
            "separator": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${Product.Title}",
                    "wrap": true,
                    "style": "heading"
                },
                {
                    "type": "TextBlock",
                    "text": "${Product.RetailCategory}",
                    "wrap": true
                }
            ]
        }
    ]
}