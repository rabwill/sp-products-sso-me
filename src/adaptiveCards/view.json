{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",       
    "refresh": {
        "userIds": [],
        "action": {
            "type": "Action.Execute",
            "verb": "refresh",
            "title": "Refresh",
            "data": {
                "productId": "${Product.Id}"
            },
            "userIds": ["${UserId}"]
        }
    },
    "body": [      
        {
            "type": "Container",
            "items": [
                               
                                    {
                                        "type": "Input.Text",
                                        "label": "Title",
                                        "id": "Title",
                                        "value": "${Product.Title}",
                                        "isRequired": true,
                                        "errorMessage": "Title is required"
                                    },
                                 
                                    {
                                        "type": "ActionSet",
                                        "actions": [
                                            {
                                                "type": "Action.Execute",
                                                "verb": "save",
                                                "title": "Save",
                                                "data": {
                                                    "productId": "${Product.Id}"
                                                }
                                            },
                                            {
                                                "type": "Action.Execute",
                                                "verb": "cancel",
                                                "title": "Cancel",
                                                "data": {}
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                }
          