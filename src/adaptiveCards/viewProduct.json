{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",       
    "refresh": {
        "userIds": [],
        "action": {
            "type": "Action.Execute",
            "verb": "refresh",
            "title": "Refresh",
            "data": {
                "productId": "${Product.Id}"
            }
        }
    },
    "body": [
        {
            "type": "TextBlock",
            "text": "${Product.Title} This",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "${Product.RetailCategory}",
            "wrap": true
        },
        {
            "type": "Image",
            "url": "${Product.PhotoSubmission}",
            "altText": "${Title}"
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Call Volume",
                    "value": "${formatNumber(Product.CustomerRating,0)}"
                },
                {
                    "title": "Release Date",
                    "value": "${formatDateTime(Product.ReleaseDate,'dd/MM/yyyy')}"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "Take action",
                            "card": {
                                "type": "AdaptiveCard",
                                "body": [
                                    {
                                        "type": "Input.Text",
                                        "label": "Title",
                                        "id": "Title",
                                        "value": "${Product.Title}",
                                        "isRequired": true,
                                        "errorMessage": "Title is required"
                                    },
                                    {
                                        "type": "Input.ChoiceSet",
                                        "label": "Category",
                                        "id": "RetailCategory",
                                        "value": "${Product.RetailCategory}",
                                        "isRequired": true,
                                        "errorMessage": "Category is required",
                                        "choices": [
                                            {
                                                "$data": "${RetailCategories}",
                                                "title": "${$data}",
                                                "value": "${$data}"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Input.Date",
                                        "label": "Release date",
                                        "id": "ReleaseDate",
                                        "value": "${formatDateTime(Product.ReleaseDate,'yyyy-MM-dd')}",
                                        "isRequired": true,
                                        "errorMessage": "Release date is required"
                                    },
                                    {
                                        "type": "ActionSet",
                                        "actions": [
                                            {
                                                "type": "Action.Execute",
                                                "verb": "save",
                                                "title": "Save",
                                                "data": {
                                                    "productId": "${Product.Id}"
                                                }
                                            },
                                            {
                                                "type": "Action.Execute",
                                                "verb": "cancel",
                                                "title": "Cancel",
                                                "data": {}
                                            }
                                        ]
                                    }
                                ]
                            }
                        }]
                }
            ]
        }
    ]
}